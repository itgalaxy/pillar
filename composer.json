{
    "name": "itgalaxy/pillar",
    "type": "wordpress-plugin",
    "license": "MIT",
    "description": "Collection WordPress mini plugins (theme features) to apply theme-agnostic modifications",
    "homepage": "https://github.com/itgalaxy/pillar/",
    "authors": [
        {
            "name": "Alexander Krasnoyarov",
            "email": "development@itgalaxy.company",
            "homepage": "https://github.com/evilebottnawi"
        }
    ],
    "keywords": [
        "wordpress",
        "wordpress-plugin"
    ],
    "autoload": {
        "psr-4": {
            "Itgalaxy\\Pillar\\": "src/Itgalaxy"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Itgalaxy\\Pillar\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/itgalaxy/pillar/issues"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "itgalaxy/bmp2image": "^2.0.0",
        "chrisjean/php-ico": "^1.0.4",
        "composer/installers": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1.4",
        "phpunit/phpcov": "^4.0.1"
    },
    "scripts": {
        "prepublish": "composer install --no-ansi --no-dev --no-interaction --optimize-autoloader",
        "phpunit": "phpunit",

        "test": "@phpunit"
    }
}
